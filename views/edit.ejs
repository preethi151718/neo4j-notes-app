<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Edit Note</title>
    <link rel="stylesheet" href="/style.css" />
  </head>
  <body>
    <h1>Edit Note</h1>
    <div class="container">
      <!-- Edit Note Form -->
      <form action="/update/<%= note.id %>" method="POST">
        <!-- Title Input -->
        <input type="text" name="title" value="<%= note.title %>" placeholder="Enter title" required /><br />

        <!-- Content Textarea -->
        <textarea name="content" placeholder="Enter content" required><%= note.content %></textarea><br />

        <!-- Color Selection Dropdown -->
        <label for="color">Select Color:</label>
        <select name="color">
          <option value="#ffcccb" <%= note.color === '#ffcccb' ? 'selected' : '' %>>Light Pink</option>
          <option value="#add8e6" <%= note.color === '#add8e6' ? 'selected' : '' %>>Light Blue</option>
          <option value="#90ee90" <%= note.color === '#90ee90' ? 'selected' : '' %>>Light Green</option>
          <option value="#dda0dd" <%= note.color === '#dda0dd' ? 'selected' : '' %>>Light Purple</option>
          <option value="#ffffe0" <%= note.color === '#ffffe0' ? 'selected' : '' %>>Light Yellow</option>
        </select><br />

        <!-- Pinned Checkbox -->
        <label for="pinned">Pin this note?</label>
        <input type="checkbox" name="pinned" <%= note.pinned ? "checked" : "" %> /><br />

        <!-- Category Dropdown -->
        <label for="category">Select Category</label>
        <select name="category">
          <% categories.forEach(function(category) { %>
            <option value="<%= category %>" <%= note.category === category ? "selected" : "" %>><%= category %></option>
          <% }); %>
        </select><br />

        <!-- Save Button -->
        <button type="submit">Save Changes</button>
      </form>
    </div>

    <!-- Back Link -->
    <a href="/" style="
  position: absolute;
  top: 10px;
  left: 10px;
  font-size: 16px;
  font-weight: bold;
  text-decoration: none;
  color: #ff5e5e;
  background: #fff3f3;
  padding: 8px 12px;
  border-radius: 8px;
  box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
  transition: 0.3s ease;">
  â¬… Back to Notes
</a>

  </body>
</html>
